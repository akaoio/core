{
  "name": "@akaoio/core",
  "version": "1.0.0",
  "description": "AKAO.IO Core Technologies Workspace - Orchestrates all @akaoio packages",
  "private": true,
  "type": "module",
  "scripts": {
    "setup": "node scripts/setup.js",
    "update": "node scripts/update.js",
    "build": "node scripts/build.js",
    "build:all": "npm run build",
    "test": "node scripts/test.js",
    "test:all": "npm test",
    "publish": "node scripts/publish.js",
    "dev": "npm run setup && npm run build",
    "clean": "node scripts/clean.js",
    "status": "node scripts/status.js",
    "sync": "node scripts/sync.js",
    "sync:watch": "node scripts/sync.js --watch",
    "sync:dry": "node scripts/sync.js --dry-run",
    "sync:to-core": "node scripts/sync.js --to-core",
    "sync:to-projects": "node scripts/sync.js --to-projects",
    "integrity:scan": "node scripts/integrity-scanner.cjs .",
    "integrity:dashboard": "node scripts/integrity-dashboard.cjs",
    "integrity:enforce": "npm run integrity:scan && npm run integrity:dashboard",
    "precommit": "npm run integrity:enforce",
    "agents:setup": "cd teams/agent-runtime && npm install && npm run setup",
    "agents:start": "cd teams/agent-runtime && npm start",
    "agents:stop": "cd teams/agent-runtime && npm run stop",
    "agents:status": "cd teams/agent-runtime && npm run status",
    "agents:dashboard": "echo 'Open teams/agent-runtime/dashboard/LiveAgentDashboard.html in your browser'",
    "dashboard": "node scripts/dashboard.js",
    "dashboard:live": "cd projects/dashboard && npm start",
    "docs:rebuild": "./rebuild-docs.sh",
    "docs:core": "npx @akaoio/composer build",
    "docs:watch": "node watch-docs.cjs",
    "services:install": "./install-services.sh",
    "services:uninstall": "./uninstall-services.sh"
  },
  "workspaces": [
    "projects/composer",
    "projects/battle",
    "projects/builder",
    "projects/air",
    "projects/ui",
    "projects/stacker",
    "projects/dashboard"
  ],
  "keywords": [
    "akaoio",
    "workspace",
    "orchestrator",
    "core-technologies",
    "composer",
    "battle",
    "builder",
    "air"
  ],
  "author": "AKAO.IO",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akaoio/core"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "chalk": "^5.0.0",
    "chokidar": "^3.5.3",
    "js-yaml": "^4.1.0",
    "ora": "^6.0.0"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "glob": "^8.1.0",
    "node-pty": "^1.0.0",
    "strip-ansi": "^7.1.0"
  }
}
